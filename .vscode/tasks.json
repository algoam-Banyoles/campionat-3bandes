{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "DB Push (cloud)",
      "type": "shell",
      "command": "supabase db push --db-url \"$env:SUPABASE_DB_URL\""
    },
    {
      "label": "DB Pull (cloud)",
      "type": "shell",
      "command": "supabase db pull --db-url \"$env:SUPABASE_DB_URL\""
    },
    {
      "label": "List Supabase Tables",
      "type": "shell",
      "command": "pwsh ./List-SupabaseTables.ps1",
      "options": {
        "env": {
          "SUPABASE_DB_URL": "${env:SUPABASE_DB_URL}"
        }
      }
    }
  ]
}
